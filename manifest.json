{
  "manifest_version": 3,
  "name": "SharpFocus",
  "version": "1.0",
  "description": "Focus on youtube videos by blocking distractions.",
  "author": "Macha Melli",
  "homepage_url": "https://github.com/MachaMelli/SharpFocus",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["*://*.youtube.com/*", "<all_urls>"],
  "background": {
    "scripts": ["background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts/focus-mode.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/overlay.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SharpFocus",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "SharpFocus@MachaMelli",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
